<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutorial1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ian.a24game.Tutorial1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textAlignment="center"
            android:text="@string/rules_of_the_game"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36dp"
            android:textAlignment="center"
            android:text="@string/tutorial_1_formula"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:src="@drawable/eight" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:src="@drawable/nine" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:src="@drawable/five" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:src="@drawable/one" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:src="@drawable/plus" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:src="@drawable/minus" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:src="@drawable/multiply" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:src="@drawable/divide" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24dp"
        android:text="@string/tutorial_1_desc"/>

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:layout_gravity="right"
        android:background="@null"
        android:padding="0dp"
        android:src="@drawable/nextpage"
        android:onClick="nextPage"/>

</LinearLayout>
